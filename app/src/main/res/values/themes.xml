<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bored" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/splash</item>
        <item name="android:navigationBarColor">@color/splash</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowTranslucentNavigation">false</item>
<!--        <item name="android:navigationBarColor">@color/purple_500</item>-->
    </style>

    <style name="Theme.Bored.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Bored.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Bored.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>